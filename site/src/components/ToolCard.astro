---
import type { Tool } from '../lib/airtable';

export interface Props {
  tool: Tool;
}

const { tool } = Astro.props;

const categoryColors: Record<string, string> = {
  'Writing': '#10b981',
  'Image': '#8b5cf6',
  'Video': '#ec4899',
  'Audio': '#06b6d4',
  'Coding': '#f59e0b',
  'Productivity': '#3b82f6',
  'Marketing': '#ef4444',
  'Data': '#84cc16'
};

const accentColor = categoryColors[tool.category] || '#f5a623';
---

<article class="tool-card" style={`--card-accent: ${accentColor}`}>
  <div class="card-glow"></div>

  <div class="card-header">
    <div class="card-title-row">
      <h3><a href={`/tools/${tool.slug}`}>{tool.name}</a></h3>
      <span class="category-badge">{tool.category}</span>
    </div>
    <div class="card-meta">
      <span class="pricing">{tool.pricing}</span>
    </div>
  </div>

  <p class="description">{tool.description}</p>

  <div class="card-footer">
    <a href={`/tools/${tool.slug}`} class="btn-review">
      <span>Read Review</span>
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
    <a href={tool.affiliateLink} class="btn-try" target="_blank" rel="noopener sponsored">
      <span>Try Free</span>
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
        <polyline points="15 3 21 3 21 9"/>
        <line x1="10" y1="14" x2="21" y2="3"/>
      </svg>
    </a>
  </div>

  <div class="card-border"></div>
</article>

<style>
  .tool-card {
    --card-accent: #f5a623;

    position: relative;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 20px;
    padding: 1.75rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg,
      transparent 0%,
      var(--card-accent) 50%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .card-border {
    position: absolute;
    inset: 0;
    border-radius: 20px;
    padding: 1px;
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      rgba(255, 255, 255, 0.02) 100%
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    transition: all 0.4s ease;
  }

  .tool-card:hover {
    background: rgba(255, 255, 255, 0.04);
    transform: translateY(-8px);
  }

  .tool-card:hover .card-glow {
    opacity: 0.8;
  }

  .tool-card:hover .card-border {
    background: linear-gradient(135deg,
      var(--card-accent) 0%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 100%
    );
  }

  .card-header {
    margin-bottom: 1rem;
  }

  .card-title-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  h3 {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: 1.35rem;
    font-weight: 400;
    margin: 0;
    line-height: 1.3;
  }

  h3 a {
    color: #fafafa;
    transition: color 0.3s ease;
  }

  h3 a:hover {
    color: var(--card-accent);
  }

  .category-badge {
    flex-shrink: 0;
    padding: 0.35rem 0.85rem;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--card-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .pricing {
    font-size: 0.9rem;
    color: #10b981;
    font-weight: 500;
  }

  .description {
    color: #a0a0a0;
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    display: flex;
    gap: 0.75rem;
  }

  .btn-review, .btn-try {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-review {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fafafa;
  }

  .btn-review:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .btn-review svg {
    transition: transform 0.3s ease;
  }

  .btn-review:hover svg {
    transform: translateX(3px);
  }

  .btn-try {
    background: var(--card-accent);
    border: 1px solid var(--card-accent);
    color: #0a0a0b;
  }

  .btn-try:hover {
    filter: brightness(1.1);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px -8px var(--card-accent);
  }

  .btn-try svg {
    transition: transform 0.3s ease;
  }

  .btn-try:hover svg {
    transform: translate(2px, -2px);
  }

  @media (max-width: 640px) {
    .tool-card {
      padding: 1.25rem;
    }

    .card-title-row {
      flex-direction: column;
      gap: 0.5rem;
    }

    .card-footer {
      flex-direction: column;
    }
  }
</style>
