---
import Layout from '../../layouts/Layout.astro';
import ToolCard from '../../components/ToolCard.astro';
import { getAllTools, getCategories } from '../../lib/airtable';

const tools = await getAllTools();
const categories = await getCategories();
---

<Layout
  title="All AI Tools - 500+ Tools Reviewed | AI Tools HQ"
  description="Browse our complete directory of AI tools. Compare features, pricing, and find the perfect AI tool for writing, images, video, coding, and more."
>
  <main class="tools-page">
    <header class="page-header">
      <h1>All AI Tools</h1>
      <p>{tools.length} tools reviewed and compared</p>
    </header>

    <div class="filters">
      <button class="filter-btn active" data-category="all">All</button>
      {categories.map(cat => (
        <button class="filter-btn" data-category={cat.toLowerCase()}>{cat}</button>
      ))}
    </div>

    <div class="tools-grid" id="tools-grid">
      {tools.map(tool => (
        <div class="tool-wrapper" data-category={tool.category.toLowerCase()}>
          <ToolCard tool={tool} />
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
  .tools-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 8rem 2rem 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 400;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .page-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 3rem;
    padding: 1.25rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
  }

  .filter-btn {
    padding: 0.6rem 1.25rem;
    border: none;
    background: transparent;
    border-radius: 50px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s var(--ease-out-expo);
    border: 1px solid var(--border-subtle);
    color: var(--text-secondary);
  }

  .filter-btn:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-accent);
    color: var(--text-primary);
  }

  .filter-btn.active {
    background: var(--accent-primary);
    color: var(--bg-primary);
    border-color: var(--accent-primary);
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 1.5rem;
  }

  .tool-wrapper {
    transition: opacity 0.3s, transform 0.3s;
  }

  .tool-wrapper.hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .tools-page {
      padding: 7rem 1.5rem 3rem;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const toolWrappers = document.querySelectorAll('.tool-wrapper');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const category = btn.dataset.category;

      // Update active button
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Filter tools
      toolWrappers.forEach(wrapper => {
        if (category === 'all' || wrapper.dataset.category === category) {
          wrapper.classList.remove('hidden');
        } else {
          wrapper.classList.add('hidden');
        }
      });
    });
  });
</script>
