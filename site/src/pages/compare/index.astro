---
import Layout from '../../layouts/Layout.astro';
import { getAllTools } from '../../lib/airtable';

const tools = await getAllTools();

// Generate popular comparisons dynamically
const popularComparisons = [
  { tools: ['jasper', 'copy-ai'], title: 'Jasper vs Copy.ai' },
  { tools: ['chatgpt', 'claude'], title: 'ChatGPT vs Claude' },
  { tools: ['midjourney', 'dall-e-3'], title: 'Midjourney vs DALL-E 3' },
  { tools: ['github-copilot', 'cursor'], title: 'GitHub Copilot vs Cursor' },
  { tools: ['synthesia', 'heygen'], title: 'Synthesia vs HeyGen' },
  { tools: ['grammarly', 'wordtune'], title: 'Grammarly vs Wordtune' },
  { tools: ['elevenlabs', 'murf-ai'], title: 'ElevenLabs vs Murf.ai' },
  { tools: ['notion-ai', 'coda-ai'], title: 'Notion AI vs Coda AI' },
];
---

<Layout
  title="Compare AI Tools Side by Side | AI Tools HQ"
  description="Compare popular AI tools head-to-head. See features, pricing, and pros/cons to make the right choice."
>
  <main class="compare-page">
    <header class="page-header">
      <h1>Compare AI Tools</h1>
      <p>Select two tools to compare side by side</p>
    </header>

    <div class="compare-selector">
      <div class="select-group">
        <label>Tool 1</label>
        <select id="tool1">
          <option value="">Select a tool...</option>
          {tools.map(t => (
            <option value={t.slug}>{t.name}</option>
          ))}
        </select>
      </div>

      <span class="vs">VS</span>

      <div class="select-group">
        <label>Tool 2</label>
        <select id="tool2">
          <option value="">Select a tool...</option>
          {tools.map(t => (
            <option value={t.slug}>{t.name}</option>
          ))}
        </select>
      </div>

      <button id="compare-btn" class="btn-primary">Compare</button>
    </div>

    <section class="popular-comparisons">
      <h2>Popular Comparisons</h2>
      <div class="comparison-grid">
        {popularComparisons.map(comp => (
          <a href={`/compare/${comp.tools[0]}/${comp.tools[1]}`} class="comparison-card">
            <span class="tool-name">{comp.title.split(' vs ')[0]}</span>
            <span class="vs-badge">VS</span>
            <span class="tool-name">{comp.title.split(' vs ')[1]}</span>
          </a>
        ))}
      </div>
    </section>

    <section class="best-lists">
      <h2>Best Of Lists</h2>
      <div class="list-grid">
        <a href="/best/ai-writing-tools" class="list-card">
          <h3>Best AI Writing Tools 2025</h3>
          <p>Top tools for content creation</p>
        </a>
        <a href="/best/free-ai-tools" class="list-card">
          <h3>Best Free AI Tools</h3>
          <p>Powerful tools that cost nothing</p>
        </a>
        <a href="/best/ai-image-generators" class="list-card">
          <h3>Best AI Image Generators</h3>
          <p>Create stunning visuals from text</p>
        </a>
        <a href="/best/ai-coding-assistants" class="list-card">
          <h3>Best AI Coding Assistants</h3>
          <p>Speed up your development</p>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .compare-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 8rem 2rem 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 400;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .page-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .compare-selector {
    display: flex;
    align-items: flex-end;
    gap: 1.5rem;
    justify-content: center;
    padding: 2rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 20px;
    margin-bottom: 4rem;
    flex-wrap: wrap;
  }

  .select-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .select-group label {
    font-weight: 500;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .select-group select {
    padding: 0.875rem 1.25rem;
    font-size: 1rem;
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    min-width: 220px;
    background: var(--bg-secondary);
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .select-group select:hover,
  .select-group select:focus {
    border-color: var(--accent-primary);
    outline: none;
  }

  .vs {
    font-family: var(--font-display);
    font-weight: 400;
    font-style: italic;
    color: var(--accent-primary);
    font-size: 1.5rem;
    padding-bottom: 0.75rem;
  }

  .btn-primary {
    padding: 0.875rem 2rem;
    background: var(--accent-primary);
    color: var(--bg-primary);
    border: none;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s var(--ease-out-expo);
  }

  .btn-primary:hover {
    background: var(--accent-secondary);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px -10px var(--accent-glow);
  }

  h2 {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 400;
    margin-bottom: 2rem;
    text-align: center;
    color: var(--text-primary);
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
    margin-bottom: 4rem;
  }

  .comparison-card {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s var(--ease-out-expo);
  }

  .comparison-card:hover {
    border-color: var(--accent-primary);
    background: var(--bg-card-hover);
    transform: translateY(-4px);
  }

  .tool-name {
    font-weight: 600;
    color: var(--text-primary);
  }

  .vs-badge {
    background: var(--accent-primary);
    color: var(--bg-primary);
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    font-size: 0.7rem;
    font-weight: 700;
  }

  .list-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }

  .list-card {
    padding: 1.75rem;
    background: linear-gradient(135deg, rgba(245, 166, 35, 0.15) 0%, rgba(255, 107, 53, 0.1) 100%);
    border: 1px solid rgba(245, 166, 35, 0.3);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s var(--ease-out-expo);
  }

  .list-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent-primary);
    box-shadow: 0 10px 30px -10px var(--accent-glow);
  }

  .list-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .list-card p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .compare-page {
      padding: 7rem 1.5rem 3rem;
    }

    .compare-selector {
      flex-direction: column;
      align-items: stretch;
    }

    .vs {
      text-align: center;
      padding: 0;
    }

    .select-group select {
      min-width: 100%;
    }
  }
</style>

<script>
  const tool1 = document.getElementById('tool1') as HTMLSelectElement;
  const tool2 = document.getElementById('tool2') as HTMLSelectElement;
  const compareBtn = document.getElementById('compare-btn');

  compareBtn?.addEventListener('click', () => {
    if (tool1.value && tool2.value) {
      window.location.href = `/compare/${tool1.value}/${tool2.value}`;
    } else {
      alert('Please select two tools to compare');
    }
  });
</script>
