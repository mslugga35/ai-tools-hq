---
import Layout from '../layouts/Layout.astro';
import ToolCard from '../components/ToolCard.astro';
import { getAllTools, getCategories } from '../lib/airtable';

const tools = await getAllTools();
const categories = await getCategories();
const featuredTools = tools.slice(0, 6);

const categoryIcons: Record<string, string> = {
  'Writing': '‚úçÔ∏è',
  'Image': 'üé®',
  'Video': 'üé¨',
  'Audio': 'üéµ',
  'Coding': 'üíª',
  'Productivity': '‚ö°',
  'Marketing': 'üìà',
  'Data': 'üìä'
};
---

<Layout
  title="AI Tools HQ - Discover the Best AI Tools for Any Task"
  description="Curated directory of 500+ AI tools. Expert reviews, honest comparisons, and recommendations to find the perfect AI tool for your creative workflow."
>
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg">
        <div class="hero-gradient"></div>
        <div class="hero-grid"></div>
        <div class="hero-orb hero-orb-1"></div>
        <div class="hero-orb hero-orb-2"></div>
      </div>

      <div class="hero-content">
        <div class="hero-badge">
          <span class="badge-dot"></span>
          <span>500+ Tools Reviewed</span>
        </div>

        <h1>
          <span class="hero-line">Find Your</span>
          <span class="hero-line hero-accent">Perfect AI Tool</span>
        </h1>

        <p class="hero-subtitle">
          Curated reviews and honest comparisons to help creators,
          developers, and teams discover tools that actually work.
        </p>

        <div class="hero-search">
          <div class="search-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.3-4.3"/>
            </svg>
          </div>
          <input type="search" placeholder="Search tools, categories, use cases..." id="search" />
          <button class="search-btn">Search</button>
        </div>

        <div class="hero-categories">
          {categories.slice(0, 6).map((cat, i) => (
            <a href={`/category/${cat.toLowerCase()}`} class="hero-pill" style={`animation-delay: ${0.5 + i * 0.1}s`}>
              {cat}
            </a>
          ))}
        </div>
      </div>

      <div class="hero-stats">
        <div class="stat">
          <span class="stat-value">500+</span>
          <span class="stat-label">AI Tools</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-value">{categories.length}</span>
          <span class="stat-label">Categories</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-value">Daily</span>
          <span class="stat-label">Updates</span>
        </div>
      </div>
    </section>

    <!-- Featured Tools -->
    <section class="featured">
      <div class="section-header">
        <div class="section-badge">Featured</div>
        <h2>Handpicked <em>AI Tools</em></h2>
        <p>Our editors' selection of the most impactful tools this month</p>
      </div>

      <div class="tools-grid">
        {featuredTools.map((tool, i) => (
          <div class="tool-wrapper" style={`animation-delay: ${i * 0.1}s`}>
            <ToolCard tool={tool} />
          </div>
        ))}
      </div>

      <div class="section-cta">
        <a href="/tools" class="btn-outline">
          <span>View All Tools</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="categories-section">
      <div class="section-header">
        <div class="section-badge">Browse</div>
        <h2>Explore by <em>Category</em></h2>
        <p>Find the right tool for your specific needs</p>
      </div>

      <div class="category-grid">
        {categories.map((cat, i) => (
          <a href={`/category/${cat.toLowerCase()}`} class="category-card" style={`animation-delay: ${i * 0.05}s`}>
            <span class="category-icon">{categoryIcons[cat] || 'ü§ñ'}</span>
            <div class="category-info">
              <h3>{cat}</h3>
              <span class="category-count">{tools.filter(t => t.category === cat).length} tools</span>
            </div>
            <div class="category-arrow">‚Üí</div>
          </a>
        ))}
      </div>
    </section>

    <!-- Popular Comparisons -->
    <section class="comparisons">
      <div class="section-header">
        <div class="section-badge">Compare</div>
        <h2>Popular <em>Comparisons</em></h2>
        <p>Head-to-head matchups to help you decide</p>
      </div>

      <div class="comparison-grid">
        <a href="/compare/jasper/copy-ai" class="comparison-card">
          <div class="comparison-tools">
            <span>Jasper</span>
            <span class="vs">vs</span>
            <span>Copy.ai</span>
          </div>
          <span class="comparison-category">Writing</span>
        </a>
        <a href="/compare/midjourney/dall-e-3" class="comparison-card">
          <div class="comparison-tools">
            <span>Midjourney</span>
            <span class="vs">vs</span>
            <span>DALL-E</span>
          </div>
          <span class="comparison-category">Image</span>
        </a>
        <a href="/best/ai-writing-tools" class="comparison-card featured-comparison">
          <div class="comparison-tools">
            <span>Best AI Writing Tools 2025</span>
          </div>
          <span class="comparison-category">Top Picks</span>
        </a>
        <a href="/best/free-ai-tools" class="comparison-card">
          <div class="comparison-tools">
            <span>Best Free AI Tools</span>
          </div>
          <span class="comparison-category">Free</span>
        </a>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-content">
        <h2>Ready to find your next favorite AI tool?</h2>
        <p>Browse our complete directory of 500+ AI tools with honest reviews and comparisons.</p>
        <a href="/tools" class="btn-primary">
          <span>Explore All Tools</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 8rem 2rem 4rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 80% 50% at 50% -20%, rgba(245, 166, 35, 0.15) 0%, transparent 50%);
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 60% 60% at 50% 50%, black 0%, transparent 70%);
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: orbFloat 20s ease-in-out infinite;
  }

  .hero-orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(245, 166, 35, 0.1) 0%, transparent 70%);
    top: -200px;
    left: -200px;
  }

  .hero-orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255, 107, 53, 0.08) 0%, transparent 70%);
    bottom: -100px;
    right: -100px;
    animation-delay: -10s;
  }

  @keyframes orbFloat {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(30px, 30px); }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 50px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    animation: fadeUp 0.8s var(--ease-out-expo) backwards;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 5.5rem);
    font-weight: 400;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }

  .hero-line {
    display: block;
    animation: fadeUp 0.8s var(--ease-out-expo) backwards;
  }

  .hero-line:nth-child(1) { animation-delay: 0.1s; }
  .hero-line:nth-child(2) { animation-delay: 0.2s; }

  .hero-accent {
    color: var(--accent-primary);
    font-style: italic;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 540px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
    animation: fadeUp 0.8s var(--ease-out-expo) 0.3s backwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-search {
    display: flex;
    align-items: center;
    max-width: 560px;
    margin: 0 auto 2rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 100px;
    padding: 0.5rem;
    animation: fadeUp 0.8s var(--ease-out-expo) 0.4s backwards;
    transition: all 0.3s ease;
  }

  .hero-search:focus-within {
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 4px var(--accent-glow);
  }

  .search-icon {
    padding: 0 1rem;
    color: var(--text-muted);
  }

  .hero-search input {
    flex: 1;
    background: none;
    border: none;
    outline: none;
    font-size: 1rem;
    color: var(--text-primary);
    padding: 0.75rem 0;
  }

  .hero-search input::placeholder {
    color: var(--text-muted);
  }

  .search-btn {
    padding: 0.75rem 1.5rem;
    background: var(--accent-primary);
    color: var(--bg-primary);
    border: none;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s var(--ease-out-expo);
  }

  .search-btn:hover {
    background: var(--accent-secondary);
    transform: scale(1.05);
  }

  .hero-categories {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    animation: fadeUp 0.8s var(--ease-out-expo) 0.5s backwards;
  }

  .hero-pill {
    padding: 0.5rem 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: all 0.3s var(--ease-out-expo);
    animation: fadeUp 0.6s var(--ease-out-expo) backwards;
  }

  .hero-pill:hover {
    background: var(--bg-card-hover);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: translateY(-2px);
  }

  .hero-stats {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-top: 4rem;
    padding: 1.5rem 2.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 100px;
    animation: fadeUp 0.8s var(--ease-out-expo) 0.6s backwards;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--accent-primary);
  }

  .stat-label {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border-subtle);
  }

  /* Sections */
  .featured, .categories-section, .comparisons {
    max-width: 1400px;
    margin: 0 auto;
    padding: 6rem 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: var(--accent-glow);
    border: 1px solid rgba(245, 166, 35, 0.3);
    border-radius: 50px;
    font-size: 0.8rem;
    color: var(--accent-primary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    margin-bottom: 1rem;
  }

  .section-header h2 em {
    color: var(--accent-primary);
    font-style: italic;
  }

  .section-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 1.5rem;
  }

  .tool-wrapper {
    animation: fadeUp 0.6s var(--ease-out-expo) backwards;
  }

  .section-cta {
    text-align: center;
    margin-top: 3rem;
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border: 1px solid var(--border-accent);
    border-radius: 50px;
    color: var(--text-primary);
    font-weight: 500;
    transition: all 0.3s var(--ease-out-expo);
  }

  .btn-outline:hover {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: 0 10px 40px -10px var(--accent-glow);
  }

  .btn-outline svg {
    transition: transform 0.3s var(--ease-out-expo);
  }

  .btn-outline:hover svg {
    transform: translateX(4px);
  }

  /* Categories */
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .category-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
    transition: all 0.3s var(--ease-out-expo);
    animation: fadeUp 0.6s var(--ease-out-expo) backwards;
  }

  .category-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-accent);
    transform: translateY(-4px);
  }

  .category-icon {
    font-size: 1.5rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
    border-radius: 12px;
  }

  .category-info {
    flex: 1;
  }

  .category-info h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .category-count {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .category-arrow {
    color: var(--text-muted);
    transition: all 0.3s var(--ease-out-expo);
  }

  .category-card:hover .category-arrow {
    color: var(--accent-primary);
    transform: translateX(4px);
  }

  /* Comparisons */
  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .comparison-card {
    padding: 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
    transition: all 0.3s var(--ease-out-expo);
  }

  .comparison-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-accent);
    transform: translateY(-4px);
  }

  .comparison-card.featured-comparison {
    background: linear-gradient(135deg, rgba(245, 166, 35, 0.1) 0%, rgba(255, 107, 53, 0.05) 100%);
    border-color: rgba(245, 166, 35, 0.3);
  }

  .comparison-tools {
    font-family: var(--font-display);
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
  }

  .vs {
    color: var(--accent-primary);
    font-style: italic;
    margin: 0 0.5rem;
  }

  .comparison-category {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* CTA Section */
  .cta-section {
    padding: 6rem 2rem;
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: 4rem;
    background: linear-gradient(135deg, rgba(245, 166, 35, 0.1) 0%, rgba(255, 107, 53, 0.05) 100%);
    border: 1px solid rgba(245, 166, 35, 0.2);
    border-radius: 24px;
  }

  .cta-content h2 {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }

  .cta-content p {
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--accent-primary);
    color: var(--bg-primary);
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s var(--ease-out-expo);
  }

  .btn-primary:hover {
    background: var(--accent-secondary);
    transform: translateY(-2px);
    box-shadow: 0 20px 40px -10px var(--accent-glow);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 7rem 1.5rem 3rem;
      min-height: auto;
    }

    .hero-stats {
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem;
      border-radius: 16px;
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }

    .category-grid,
    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .cta-content {
      padding: 2rem;
    }
  }
</style>

<script>
  const search = document.getElementById('search');
  search?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      const query = (e.target as HTMLInputElement).value.toLowerCase();
      if (query.length >= 2) {
        window.location.href = `/tools?q=${encodeURIComponent(query)}`;
      }
    }
  });
</script>
